{
  "name": "ssr-bolierplate",
  "version": "1.0.0",
  "description": "Server Side Rendering template with Next JS, React JS, Redux, JSS and TypeScript.",
  "main": "index.js",
  "repository": "https://github.com/wolframdeus/ssr-boilterplate.git",
  "author": "Wolfram Deus <wolfram.deus@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development DEPLOY_ENV=development nodemon ./src/server/index.ts",
    "lint": "tslint ./src/**/*.* --config ./tslint.json --project ./tsconfig.json",
    "lint-fix": "tslint ./src/**/*.* --fix --config ./tslint.json --project ./tsconfig.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.(ts|tsx)": [
        "yarn run lint-fix",
        "git add"
      ]
    },
    "ignore": [
      "*.d.ts",
      "**/*.test.tsx"
    ]
  },
  "dependencies": {
    "@material-ui/core": "^3.9.3",
    "@types/jss": "^9.5.8",
    "@types/react-jss": "^8.6.3",
    "@zeit/next-typescript": "^1.1.1",
    "colors": "^1.3.3",
    "cookie-parser": "^1.4.4",
    "cross-env": "^5.2.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "jss": "^9.8.7",
    "mobile-detect": "^1.4.3",
    "next": "^8.1.0",
    "next-routes": "^1.4.2",
    "nodemon": "^1.19.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-jss": "^8.6.1",
    "react-redux": "^7.0.3",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "styled-jsx": "^3.2.1",
    "ts-node": "^8.1.0"
  },
  "devDependencies": {
    "@types/colors": "^1.2.1",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.1",
    "@types/mobile-detect": "^1.3.4",
    "@types/next": "^8.0.5",
    "@types/node": "^12.0.2",
    "@types/react-redux": "^7.0.9",
    "@types/styled-jsx": "^2.2.8",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "resolutions": {
    "terser": "3.14.*"
  }
}
